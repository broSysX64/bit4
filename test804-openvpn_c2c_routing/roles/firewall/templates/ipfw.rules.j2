#!/bin/sh -eu

LOOP=lo0
ETH={{ ansible_default_ipv4.interface }}
NAT=1

ipfw -qf flush

# VPN NAT gateway
ipfw -q nat $NAT config if $ETH

# Firewall rules
alias ADD="ipfw -q add"

ADD 010 allow    all from any to any via $LOOP
ADD 020 nat $NAT ip  from any to any via $ETH
ADD 999 allow    all from any to any

#!/bin/sh -eu

# Vultr does not support cloudinit.
# https://discuss.vultr.com/discussion/998/why-is-cloud-init-no-longer-enabled-on-ubuntu-images

mkdir /root/startup
cd    /root/startup

#
# Timezone
#
timedatectl set-timezone UTC

#
# User
#
groupadd ${admin_user}
useradd  ${admin_user} -g ${admin_user} -G users,sudo -m

#
# Authorized keys
#
install \
  -g ${admin_user} \
  -o ${admin_user} \
  -m 0700 \
  -d \
  /home/${admin_user}/.ssh

cat > authorized_keys << EOF
${admin_pubkeys}
EOF

install \
  -g ${admin_user} \
  -o ${admin_user} \
  -m 0600 \
  authorized_keys \
  /home/${admin_user}/.ssh/

#
# Sudoers
#
cat > sudoers_admin << EOF
${admin_user} ALL=(ALL) NOPASSWD:ALL
EOF

install -m 0440 sudoers_admin /etc/sudoers.d/

#
# SSH server
#
cat > sshd_config << EOF
PermitRootLogin no
PasswordAuthentication no
ChallengeResponseAuthentication no
UsePAM yes
Subsystem internal-sftp
EOF

install -m 0644 sshd_config /etc/ssh/

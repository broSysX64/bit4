#cloud-config

timezone: UTC

write_files:
  - path: /etc/ssh/sshd_config
    content: |
      PermitRootLogin no
      PasswordAuthentication no
      ChallengeResponseAuthentication no
      UsePAM yes
      Subsystem sftp internal-sftp

ssh_authorized_keys: ${admin_pubkeys_json}

system_info:
  default_user:
    name: ${admin_user}
    passwd: "${bcrypt(admin_password)}"
    shell: /bin/bash
    sudo: ALL=(ALL) ALL

user  nobody
group nobody

dev    tun
server {{ vpn_netaddr }} 255.255.255.0
proto  udp
port   {{ vpn_port }}

ca         /srv/vpn/ca.crt
crl-verify /srv/vpn/crl.pem
cert       /srv/vpn/server.crt
key        /srv/vpn/server.key
dh         /srv/vpn/dh.pem

remote-cert-tls client
keepalive       10 120
auth            SHA256
tls-version-min 1.2
tls-auth        /srv/vpn/tls_auth.key
key-direction   0
topology        subnet
max-clients     10
duplicate-cn
persist-key
persist-tun
